<div style="padding: 20px; border: 1px solid #ddd; border-radius: 8px;">
  <h2>Змінити пароль</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :password, "Новий пароль" %><br />
      <% if @minimum_password_length %>
        <em>(мінімум <%= @minimum_password_length %> символів)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field" style="margin-bottom: 20px;">
      <%= f.label :password_confirmation, "Підтвердіть новий пароль" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Змінити пароль", style: "padding: 12px 24px; background-color: #007bff; color: #fff; text-decoration: none; border-radius: 4px;" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
