<header class="app-header navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    <!-- Логотип -->
    <%= link_to "AudioShop", root_path, class: "navbar-brand text-white" %>

    <!-- Кнопка для мобільного меню -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Меню навігації -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= link_to "Магазин", products_path, class: "nav-link text-light #{'active' if current_page?(products_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Контакти", contacts_path, class: "nav-link text-light #{'active' if current_page?(contacts_path)}" %>
        </li>
      </ul>
    </div>

    <!-- Пошукова форма -->
    <%= form_with url: products_path, method: :get, local: true, class: "d-flex" do %>
      <%= text_field_tag :query, params[:query], placeholder: "Пошук...", class: "form-control me-2" %>
      <%= button_tag "Пошук", type: "submit", class: "btn btn-outline-light search-btn" %>
    <% end %>

    <!-- Дії для користувача -->
    <div class="d-flex">
      <% if user_signed_in? %>
        <%= link_to "Вихід", destroy_user_session_path, method: :delete, class: "btn btn-outline-light ms-2" %>
        <%= link_to '/cart', class: 'btn btn-outline-light ms-2' do %>
          Кошик
        <% end %>
      <% else %>
        <%= link_to "Вхід", new_user_session_path, class: "btn btn-outline-light ms-2" %>
      <% end %>
    </div>
  </div>
</header>
